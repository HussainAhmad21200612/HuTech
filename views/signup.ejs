<!DOCTYPE html>
<html>
    <head>
        <title>Hutech</title>
        <link rel="icon" href="/images/logo.png" type="image/png">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    </head>
    <body>
        
        <section class="vh-100" >
            <div class="container py-5 h-100">
              <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                  <div class="card" style="border-radius: 1rem;box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);width: 90%;padding-top: 0;" >
                    <div class="row g-0">
                      <div class="col-md-6 col-lg-5 d-none d-md-block" style="text-align: center; padding: 25% 0 10% 3%;">
                        <img src="/images/hutech.png"
                          alt="login form" class="img-fluid"  />
                      </div>
                      <div class="col-md-6 col-lg-7 d-flex align-items-center">
                        <div class="card-body p-4 p-lg-5 text-black">
          
                          <form method="POST">
          
                            <div class="d-flex align-items-center mb-3 pb-1" style="text-align: center;">
                              <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                              <span class="h1 fw-bold mb-0" style="margin-left:35% ;">HuTech</span>
                            </div>
          
                            
                            <p  style="color: #393f81;"><%= message %></p>
                            <div class="form-outline mb-4">
                                <input type="text" class="form-control form-control-lg" id="username" name="username" required/>
                                <label class="form-label" for="username">Username</label>
                              </div>

                            <div class="form-outline mb-4">
                              <input type="email" id="email" class="form-control form-control-lg" id="email" name="email" required/>
                              <label class="form-label" for="email">Email address</label>
                            </div>
                            
                            <div class="form-outline mb-4">
                                <input type="number" class="form-control form-control-lg" id="phone" name="phone" required/>
                                <label class="form-label" for="phone">Phone</label>
                              </div>
                            
                            <div class="form-outline mb-4">
                                <input type="password" id="password" class="form-control form-control-lg" name="password" required />
                                <label class="form-label" for="password">Password</label>
                              </div>
          
                            <div class="pt-1 mb-4">
                              <button class="btn btn-dark btn-lg btn-block" type="submit" id="signup">SignUp</button>
                            </div>
                          </form>
                          
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </section>
          <script src="./su.js"></script>
    </body>
</html>

 

